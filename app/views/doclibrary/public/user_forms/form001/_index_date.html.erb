<%= render :partial => 'header' %>
<%
#検索キーワードの引き継ぎ用
str_params = ''
str_params += "&state=DATE" if params[:state].to_s == 'DATE'
str_params += "&limit=#{params[:limit]}" unless params[:limit].blank?
str_params += "&kwd=#{URI.encode(params[:kwd])}" unless params[:kwd].blank?
%>
<%unless params[:state]=='DRAFT'%>
<div class="selectFormBox">
<%=render(:partial => 'doclibrary/public/user_forms/form001/change_category')%>
<%=render(:partial => 'doclibrary/public/user_forms/form001/change_group')%>
</div>
<%end%>
<h4 class="docFileTitle">ファイル一覧</h4>
<table class="docformTitle">
<tr>
 <th style="width:200px;text-align: left;">分類名</th>
 <th style="width:200px;text-align: left;">所属名</th>
 <th style="text-align: left;">タイトル</th>
 <th style="width: 120px; text-align: center;">更新日時</th>
</tr>
 <% for item in @items %>
<tr>
 <td><%=gwbd_category_name(@categories, item.category1_id)%></td>
 <td><%=gwbd_category_name(@groups, item.section_code)%></td>
 <td>
<%= link_to(item.title, "#{item.show_path(params)}#{doclib_params_set_index}") -%>
 </td>
<td><%= item.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
</tr>
 <% end %>
</table>
<%=paginate @items %>
<%=render :partial => "#{@title.doclib_form_name}limit_change"%>

<%if params[:state]=='DRAFT'%>
<!--フォルダ一覧-->
<% unless @folders.blank? %>
<h4 class="docFolderTitle">フォルダ一覧</h4>
<table class="docFolder">
<tr>
<th style="text-align: left;">フォルダ名</th>
<th style="width: 120px; text-align: center;">更新日時</th>
</tr>
<% for folder in @folders %>
<tr>
<%folder_edit_path = "/doclibrary/folders/#{folder.id}/edit?title_id=#{@title.id}&state=CATEGORY&cat=#{folder.id}"%>
<td><%= link_to folder.name, folder_edit_path %></td>
<% folder_update = folder.docs_last_updated_at || folder.updated_at %>
<td><%= folder_update.strftime('%Y-%m-%d %H:%M') %></td>
</tr>
<% end %>
</table>
<%=paginate @folders %>
<% end %>
<%end if @is_admin%>

<!--添付ファイル一覧-->
<%unless @files.blank?%>
<h4 class="docAttachTitle">添付ファイル一覧</h4>
<table class="gwboardAttachlist">
<tr>
<th style="text-align: left;">タイトル</th>
<th style="width: 24px; text-align: center;"></th>
<th style="text-align: left;">添付ファイル名</th>
<%if @title.upload_system.blank? %>
 <th style="width: 220px; text-align: left;">備考</th>
<%end%>
</tr>
<% for item in @files %>
<tr>
<td><%= link_to(item.parent.title , "#{item.item_parent_path(params)}#{doclib_params_set_index}" ) unless item.parent.blank? %></td>
<%if @title.upload_system.blank? %>
<td><%= link_to('',"/_admin/gwboard/receipts/#{item.id}/download_object?system=#{item.system_name}&title_id=#{item.title_id}",:class => item.icon_type ) %></td>
<td><%= link_to(%Q[#{item.filename} (#{item.eng_unit})],"/_admin/gwboard/receipts/#{item.id}/download_object?system=#{item.system_name}&title_id=#{item.title_id}") %></td>
<td><%=item.memo%></td>
<%else%>
 <%download_url = "#{item.file_uri(item.system_name)}"%>
 <td class="attachIcon"><%= link_to('',download_url,:class => item.icon_type) %></td>
 <td><%= link_to(%Q[#{item.filename} (#{item.eng_unit})],download_url) %></td>
<%end%>
</tr>
<% end %>
</table>
<%=paginate @files %>
<% end %>

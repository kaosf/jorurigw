<div class="bbsDocList circular">
<div class="pieceHeader">
<h2 class="pieceTitle">回覧板</h2>

<div class="btsHeadeRight">
<%if @is_admin%>
 <span class="btSetAdd"><a href="/gwcircular/settings/">管理者</a></span>
<%else%>
 <span class="btSet"><a href="/gwcircular/settings/">設定</a></span>
<%end%>
</div><!--btsHeadeRight-->

</div><!--pieceHeader-->
<!--カラム用タグ-->
<div class="pieceBanner">
</div>

<div class="pieceBody">

<%= render :partial => 'header' %>
<% form_for :item, :url => @item.update_path ,:html => {:method=>:put , :multipart => true, :id => 'itemForm'} do |f| %>

<%= f.error_messages %>
<div class="formTitle new">新規作成</div>
<%= render :partial => 'form', :locals => {:f => f} %>

<div class="submitters">
<div align="center">
<table>
<tr>
<td><%= submit_for_update(f, :js_submitter => "my_submit('public')",:caption=>'配信') -%></td>
<td><%= submit_for_update(f, :js_submitter => "my_submit('draft')",:caption=>'下書き')%></td>
</tr>
</table>
</div>
</div>

<% end %>

</div><!--pieceBody-->
</div><!--piece gwbbs-->

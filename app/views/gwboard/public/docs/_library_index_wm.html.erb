<%
#旧設定では表示させないように注意が必要
dsp_flag = false
for item in @files
  dsp_flag = true unless item.is_image  #画像以外のファイルがある時は表示する
end unless @files.blank?
%>
<%if dsp_flag %>
<div class="docsInnerBox2">
<table class="gwboardAttachlist">
<tr>
  <th colspan="2">添付ファイル名</th>
  <th class="remark">備考</th>
</tr>
<%
for item in @files
  download_url = "#{item.file_uri(item.system_name)}"
%>
<%unless item.is_image %>
 <tr>
 <td style="width:30px;" class="attachIcon"><%= link_to('',download_url,:class => item.icon_type) %></td>
 <td><%= link_to(%Q[#{item.filename} (#{item.eng_unit})],download_url) %></td>
 <td class="remark">
 <%# 電子図書で編集権があれば、添付ファイルの備考欄編集を表示 %>
 <%if @is_editable %>
  <%=link_to('編集',"#{item.edit_memo_path(@title,@item)}#{doclib_params_set}") if @item.doc_alias == 0 if item.system_name == 'digitallibrary'%>
 <%end%>
 <%=item.memo%>
 </td>
 </tr>
<%end%>
<%
end %>
</table>
</div>
<%end%>
<div class="piece gadget rss">
<div class="pieceHeader">
<h3>RSS</h3>
<div class="btsHeaderRight">
  <span class="btSet"><%= link_to '設定を編集', "/gw/rss_readers/edit_props" %></span>
</div>
</div>

<div class="pieceBody">
<% if @items.length == 0 %>
  <div class="notice">表示する内容はありません。</div>
<% else %>
  <table class="index">
  <colgroup class="title"></colgroup>
  <colgroup class="published_at"></colgroup>
  <% @items.each do |item| %>
    <tr><th colspan="2"><h4><%=h "#{item.title} 新着ヘッドライン" %></h4></th></tr>
    <% if !item.enabled? %>
      <tr><td colspan="2"><div class="notice">無効になっています。</div></td></tr>
    <% elsif item.caches.length == 0 %>
      <tr><td colspan="2"><div class="notice">ヘッドラインを取得できませんでした。</div></td></tr>
    <% else %>
      <% reset_cycle %>
      <% item.caches.each do |cache| %>
        <tr <%= cycle '', 'class="cycle"' %>>
          <td class="link"><%= link_to_wec(cache.title, cache.link, :target => '_blank') %></td>
          <td class="published_at"><%= Gw.datetime_str(cache.published_at) %></td>
        </tr>
      <% end %>
    <% end %>
  <% end %>
  </table>
<% end %>
</div>

</div>

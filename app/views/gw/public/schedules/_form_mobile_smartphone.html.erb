  params[:item][:st_at]= st_at_str
  ed_at_str = %Q(#{params[:item]['ed_at(1i)']}-#{params[:item]['ed_at(2i)']}-#{params[:item]['ed_at(3i)']} #{params[:item]['ed_at(4i)']}:#{params[:item]['ed_at(5i)']})

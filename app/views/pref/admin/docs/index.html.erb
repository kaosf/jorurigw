<%#= render :partial => 'search' %>

<table class="index">
  
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 60px; text-align: right;">文書番号</th>
    <th style="width: ;">タイトル</th>
    <th style="width: 20%; text-align: center;">所属</th>
    <th style="width: 60px; text-align: center;">ステータス</th>
<!--
    <th style="width: 60px; text-align: center;">Outside</th>
-->
    <th style="width: 60px; text-align: center;">プレビュー</th>
  </tr>
  
  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to_show item %></td>
    <td style="text-align: right;"><%=h item.id %></td>
    <td><%=h item.title %></td>
    <td><%=h item.creator.group.display_name if item.creator && item.creator.group %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
<!--
    <td style="text-align: center;"><%= item.public_status %></td>
-->
    <td style="text-align: center;"><%= link_to_preview item %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>

<%= render :partial => 'header' %>

<%  unless @folders.blank? %>
  <table class="docFolder">
    <tr>
      <th style="width: 60px; text-align: center;"> </th>
      <th style="width: 30px; text-align: center;">索引</th>
      <th style="text-align: left;">見出し</th>
      <th style="width:120px; text-align: center;">最終更新日</th>
    </tr>
    <% for folder in @folders %>
    <tr>
      <td style="text-align: center;"><%= folder.ststus_name %></td>
      <td style="text-align: center;"><%= folder.seq_name %></td>
      <td><%= link_to(folder.title, folder.link_list_path)%></td>
      <td><%= folder.latest_updated_at.strftime('%Y-%m-%d %H:%M') %></td>
    </tr>
    <% end %>
  </table>
  <%=paginate @folders %>
<% end %>

<%unless @items.blank?%>
  <table class="docformTitle">
    <tr>
      <th style="width: 60px; text-align: center;"> </th>
      <th style="width: 30px; text-align: left;">索引</th>
      <th style="text-align: left;">タイトル</th>
      <th style="width:120px; text-align: center;">最終更新日</th>
    </tr>
  <% for item in @items %>
    <tr>
      <td style="text-align: center;"><%= link_to(item.ststus_name, item.show_path) %></td>
      <td style="text-align: left;"><%= item.seq_name %></td>
      <td><%= link_to(item.title, item.show_path)%></td>
      <td><%= item.latest_updated_at.strftime('%Y-%m-%d %H:%M').to_s %></td>
    </tr>
  <% end %>
</table>
<%=paginate @items %>
<% end %>

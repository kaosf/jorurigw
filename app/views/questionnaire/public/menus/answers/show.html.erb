<div class="bbsDocList circular">
<div class="pieceHeader"><h2 class="pieceTitle"><%=@system_title%></h2></div>

<div class="pieceBody">
<%= render :partial => 'header' %>

  <div class="editingBox">
<span class="docLink"><%= link_to '&lt;&lt; 回答一覧', @title.result_path %></span>
</div>

<div class="docsInnerBox">

<table class="bbsExpirydate">
 <tr>
  <td>　回答期限日時 : </td>
  <td class="space"></td>
  <td><%=@title.expiry_date.strftime('%Y-%m-%d %H:%M') unless @title.expiry_date.blank?%></td>
 </tr>
</table>

<div class="bbsCreatorInf">
<table>
<tr>
<td>作成 : &nbsp;</td>
<td><%= @title.createrdivision %></td>
<td class="space"></td>
<td><%= @title.creater %></td>
<td class="space"></td>
<td><%= @title.createdate %></td>
</tr>
</table>
</div>

<div class="bbsUserform">
<table class="bbsUserformBody">
<tr><td class="docTitle"><span><%=hbr(@title.title)%></span></td></tr>
</table>
</div>

</div>

<%=render(:partial => 'show')%>

<div class="btReturn"><%=link_to 'アンケート回答確認一覧へ戻る', @title.result_path %></div>

</div>
</div>

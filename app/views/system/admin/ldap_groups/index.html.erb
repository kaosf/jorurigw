
<div class="navi">
<% if @parents %>
  <%= link_to 'LDAP' , url_for(:action => :index, :parent => 0 )   %>
  &gt;
  <% @parents.each_with_index do |c, k|%>
  <%=link_to c.ou , url_for(:action => :index, :parent => c )%>
  <% if @parents.size != k + 1 %>&gt;<% end %>
  <% end %>
<% end %>
</div>

<table class="index">
  <tr>
    <th style="width: 40%"><%= @parent ? @parent.ou : 'LDAP' %></th>
    <th>Users</th>
  </tr>
  <tr>
    <td style="vertical-align: top;">
      <% @groups.each do |g| %>
      <% next if (g.ou=="Groups" or g.ou=="People" or g.ou=~ /Special*/) %>
      <%= link_to h(g.ou), url_for(:action => :index, :parent => g.ou) %><br />
      <% end %>
      <%= 'no groups' if @groups.size == 0 %>
    </td>
    <td style="vertical-align: top;">
      <% @users.each do |u| %>
        <%= u.get('cn') %>&nbsp;(<%= u.uid.to_s %>)&nbsp;<%= u.get('mail') %><br />
      <% end %>
      <%= 'no users' if @users.size == 0 %>
    </td>
  </tr>
</table>

<%#= paginate @items %>

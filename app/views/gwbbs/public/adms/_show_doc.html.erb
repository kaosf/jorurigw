<%
  if Time.now <= @item.expiry_date
    is_editable_dates = true
  else
    is_editable_dates = false
  end
%>

<%= render :partial => 'header' %>

<div class="editingBox">
<% if @is_admin || (is_editable_dates && @is_editable) %>
<span class="btEdit"><%=link_to('編集', "#{@item.edit_path}#{gwbbs_params_set}" )%></span>
<span class="btDestroy"><%=link_to('削除', "#{@item.delete_path}#{gwbbs_params_set}" , :confirm => '削除をすると元に戻せません。削除しますか', :method => :delete)%></span>
<%end%>
<% if @is_recognize %>
<span class="btRecognize"><%=link_to('承認', "#{@item.recognize_update_path}#{gwbbs_params_set}" )%></span>
<%end%>
<% if @is_publish %>
<span class="btPublish"><%=link_to('公開', "#{@item.publish_update_path}#{gwbbs_params_set}" )%></span>
<%end%>
</div>

<div class="docsInnerBox">
<table class="bbsExpirydate">
 <tr>
  <td>公開終了日 : </td>
  <td class="space"></td>
  <td><%=@item.expiry_date.strftime('%Y-%m-%d') unless @item.expiry_date.blank?%></td>
 </tr>
</table>

<table class="bbsCreator">
  <tr>
    <th style="width: 80px; text-align: left;">記事管理課 :</th>
    <td style="text-align: left;"><%=@item.section_name%></td>
  </tr>
</table>

<%if @title.importance == 1 or @title.category == 1 %>
  <table class="bbsImportance">
    <tr>
      <%if @title.importance == 1 %>
        <th style="width: 80px; text-align: left;">ステータス : </th>
        <td style="text-align: left;"><%=@item.importance_name%></td>
      <%end%>
     </tr>
     <tr>
      <%if @title.category == 1 %>
        <th style="width: 50px; text-align: left;"><%= @title.category1_name  unless @title.category1_name.blank? %> : </th>
        <td style="text-align: left;"><%= gwbd_category_name(@d_categories, @item.category1_id) %></td>
      <% end %>
    </tr>
  </table>
<% end %>

<div class="bbsCreatorInf">
  <table>
    <tr>
      <td>作成 : </td>
      <td><%= @item.creater %></td>
      <td class="space"></td>
      <td><%= @item.createrdivision %></td>
      <td class="space"></td>
      <td><%= @item.createdate %></td>
    </tr>
   <tr>
     <td>編集 : </td>
     <td><%= @item.editor %></td>
      <td class="space"></td>
     <td><%= @item.editordivision %></td>
      <td class="space"></td>
     <td><%= @item.editdate %></td>
   </tr>
  </table>
</div>
<%=render :partial => @title.gwbbs_form_name + 'show' %>
<%=render :partial => '/gwboard/public/docs/upload_index'  unless @title.upload_system == 2 unless @title.upload_system == 1%>
</div>
<%=render(:partial => 'comment_index') if @item.one_line_note == 1%>

<%if !@previous.blank? || !@next.blank?%>
<%#ページ移動データあり -------------------------------------------------------------------------------------- -%>
<div class="docsPageMove">
  <%unless @title.use_other_system%>
    <%#他シスリンクなし%>
    <% unless @previous.blank? %>
<span class="left"><%=link_to('< 前のページ', "#{@previous.show_path}&pp=#{@prev_page}#{gwbbs_params_set}")%></span>
    <% else %>
<span class="left">先頭ページ</span>
    <% end %>

<span class="center">|</span>
    <% unless @next.blank? %>
<span class="right"><%=link_to("次のページ >", "#{@next.show_path}&pp=#{@next_page}#{gwbbs_params_set}")%></span>
    <% else %>
<span class="right">最終ページ</span>
    <% end %>
  <%end%>
</div>
<%end%>
<h5><%= @title.title unless @title.blank? %></h5>
<table class="index">
  <tr>
    <th style="width:30px; text-align: center;">詳細</th>
    <th style="width:60px; text-align: center;">記事番号</th>
    <th style="text-align: left;">回答</th>
    <th style="width: 50px; text-align: center;">状態</th>
    <th style="width: 120px; text-align: center;">回答日</th>
  </tr>

  <% for item in @items %>
    <tr <%= current_cycle  %>>
        <td style="text-align: center;"><%= link_to_show item %></td>
        <td style="text-align: center;"><%=h item.id%></td>
        <td style="text-align: left;"> <%= item.body %></td>
        <td style="text-align: center;"><%= item.status.name %></td>
        <td style="text-align: center;"><%=h item.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
  <% end %>

</table>

<%= paginate @items %>

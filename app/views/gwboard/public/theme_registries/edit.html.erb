<%
@action = "edit"
@edit_path = "#{Site.current_node.public_uri}#{@item.id}"
%>
<%= render :partial => 'header' %>
<% form_for :item, :url => @edit_path ,:action=>:update ,:html => {:method=>:put , :multipart => true} do |f| %>

  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <div class="submitters">
  <input id="<%= f.object_name %>_submit" name="commit" onclick="document.getElementById('<%= f.object_name %>_state').value='prev';"  type="submit" value="プレビュー" />
  <%if @item.is_change?%>
  <input id="<%= f.object_name %>_submit" name="commit" onclick="document.getElementById('<%= f.object_name %>_state').value='reset';"  type="submit" value="プレビュー前に戻す" />
  <%end%>
  <input id="<%= f.object_name %>_submit" name="commit" onclick="document.getElementById('<%= f.object_name %>_state').value='public';" type="submit" value="登録" />
  <input id="<%= f.object_name %>_state" name="<%= f.object_name %>[state]" type="hidden" value="" />
  </div>

<% end %>
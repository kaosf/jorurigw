<%#*<p>Find me in app/views/gw/public/schedule_lists/_list.erb</p>%>
<%
  cond_holiday = "!('#{@first_day}' >= ed_at" +
            " or '#{@end_day}' <= st_at)"
  holidays = Gw::Holiday.find(:all, :order => 'st_at', :conditions => cond_holiday)

%>
<table class="index">
<tr>
  <% if @ids_show_flg -%>
  <th class="id" style="text-align:center; width: 30px;"><%= check_box_tag(:idall, value = "all", false, {:onclick=>"all_check('listForm', 'ids', this);"}) -%></th>
  <% end -%>
  <th class="day">日付</th>
  <th class="st_at_time">開始時刻</th>
  <th class="ed_at_time">終了時刻</th>
  <th class="title">件名</th>
  <th class="body">メモ（備考）</th>
  <th class="place">場所</th>
  <th class="users">参加者</th>
</tr>
<% @items.each do |item| %>
<%
  # 件名カテゴリ
  #category = title_category.to_a.rassoc(item.title_category_id.to_i)
  #category = category[0] unless category.blank?
  ed_at_str1 = ""
  ed_at_str2 = ""
  st_at_str = item.st_at.strftime('%Y-%m-%d')

  # 終了日の表示
  if item.stepped_over?
    # 日をまたいでいる
    ed_at_str1 = "#{item.ed_at.strftime("%m-%d")} （#{Gw.weekday_s(item.ed_at)}）"
  end
  if item.allday.blank?
    st_at_time = item.st_at.strftime("%H:%M")
    ed_at_str2 = item.ed_at.strftime("%H:%M")
  else
    case item.allday
    when 1
      st_at_time = "時間未定"
    when 2
      st_at_time = "終日"
    end
  end

  # 祝日
  j = holidays.select{|holiday| holiday.st_at.strftime('%Y-%m-%d') == st_at_str}
  if j.count > 0
    holiday_class = " holiday"
  else
    holiday_class = ""
  end

  if item.st_at.wday == 6
    td_class = " class=\"day saturday#{holiday_class}\""
  elsif  item.st_at.wday == 0
    td_class = " class=\"day sunday#{holiday_class}\""
  else
    td_class = " class=\"day#{holiday_class}\""
  end

  # 参加者
  user_names = Gw::ScheduleList.get_list_usernames(item)
%>
<tr<%#= cycle '' , ' class=" cycle"' %>>
  <% if @ids_show_flg -%>
    <td align="center"><%= check_box_tag "ids[]", "#{item.id}" %></td>
  <% end -%>
  <td<%= td_class %>><%= st_at_str %> （<%= Gw.weekday_s(item.st_at) %>）
    <%= "<br />～ " + ed_at_str1 if !ed_at_str1.blank? %></td>
  <td><%= st_at_time %></td>
  <td><%= ed_at_str2 %></td>
  <td><%= link_to(nz(item.title), "/gw/schedules/#{item.id}/show_one") %></td>
  <td><%= item.memo  %></td>
  <td><%= item.place  %></td>
  <td><%= user_names %></td>
</tr>
<% end %>
</table>

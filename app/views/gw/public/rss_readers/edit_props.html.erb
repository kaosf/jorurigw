<script language="JavaScript">
function select_cbs(form, flag) {
  for (n=0; n<=form.length-1; n++){
    if (form.elements[n].type == "checkbox") {
      form.elements[n].checked = flag;
    }
  }
}
</script>

<div class="piece gadget rss">
<div class="pieceHeader">
  <h2>RSS設定</h2>
</div>
<div class="pieceBody">

<% if @items.length == 0 %>
  <div class="notice">表示する内容はありません。</div>
<% else %>
  <% form_for :item, :url => "#{Site.current_node.public_uri}save_props", :html => {:method => :post} do |f| %>
    <input class="select_all" type="button" value="すべて選択" onClick="select_cbs(this.form, true)">
    <input class="select_all" type="button" value="すべて解除" onClick="select_cbs(this.form, false)">
    <br>
    <%= render :partial => 'form_props', :locals => {:f => f} %>
  <% end  %>
<% end  %>
</div>
</div>

<%# app/views/gwsub/public/sb04/sb04stafflists/index %>
<%
%>
<!-- 職員一覧 -->
<div class="gwsub sb04">
<%= render :partial => 'gwsub/public/sb04/sb04_piece_header' %>
<div class="pieceBanner">
<%= render :partial => 'gwsub/public/sb04/sb04_subfunction_select_menu' %>
<%= render :partial => 'gwsub/public/sb04/sb04_level3menu_header' %>
</div>
<div class="pieceBody">
<%= render :partial => 'gwsub/public/sb04/sb04stafflists/display_name' %>
<%= render :partial => 'gwsub/public/sb04/search_with_fyear' %>
<%= div_notice %>
<%#= table_to_index2(@items,options) %>
<%#= paginate @items %>
<% if @items.size == 0 %>
  <div class="notice">表示する項目はありません。</div>
<% else %>
<table class="index">
  <tr>
    <th></th>
    <th>年度</th>
    <th>所属</th>
    <th>所属名称</th>
    <th>職員番号</th>
    <th>兼務</th>
    <th>氏名</th>
    <th>カナ氏名</th>
    <th>職名</th>
    <th>担当名称</th>
    <th>個人内線</th>
    <th>備考</th>
  </tr>
  <% @items.each do |item|  %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <%
    # 所属未設定の表示
      if item.section_id.to_i==0
        if item.section_code.blank?
          section_code = %Q(<div class="sb04_staff_assign_warning">未割当</div>)
        else
          section_code = %Q(<div class="sb04_staff_assign_warning">#{item.section_code}</div>)
        end
      else
        section_code = %Q(<div>#{item.section_code}</div>)
      end
    # 担当割当未完了の表示
      if item.assignedjobs_id.to_i==0
        if item.assignedjobs_name.to_s.blank?
          assignedjobs_name = %Q(<div class="sb04_staff_assign_warning">未割当</div>)
        else
          assignedjobs_name = %Q(<div class="sb04_staff_assign_warning">#{item.assignedjobs_name}</div>)
        end
      else
        assignedjobs_name = %Q(<div>#{item.assignedjobs_name}</div>)
      end
    -%>
    <td><%= link_to '詳細' , "#{Site.current_node.public_uri}#{item.id}#{@param}" %></td>
    <td><%= item.fyear_markjp %></td>
    <td><%= section_code %></td>
    <td><%= item.section_name %></td>
    <td><%= item.staff_no %></td>
    <td><%= Gwsub::Sb04stafflist.multi_section_flg_show(item.multi_section_flg) %></td>
    <td><%= item.name %></td>
    <td><%= item.kana %></td>
    <td><%= item.official_title_name %></td>
    <td><%= assignedjobs_name %></td>
    <td><%= item.extension %></td>
    <td><%= item.remarks %></td>
  </tr>
  <% end %>
</table>
<% end %>
<%= paginate @items %>
</div>
</div>

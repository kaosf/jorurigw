<%# app/views/system/public/roles/new.html.erb %>
<%
if @role_id == '0'
  role_param =""
else
  role_param ="?role_id=#{@role_id}"
end
@create_path = Gw.chop_with("#{Site.current_node.public_uri}","/")
@create_path += role_param
%>
<div class="piece AdminMessage">
<%= render :partial => 'header' %>
<div class="pieceBody">
<% form_for :item, :url => @create_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <%= submit_for(f, {:caption => '保存'}) %>
<% end %>
</div>
</div>


<%
header = <<-EOL
#{render :partial => '/gw/public/schedules/piece_header'}
EOL


content_for :item do
 location = "#{Site.current_node.public_uri}import_file"
%>
<h4>インポート</h4>
CSVファイルのインポートでは、エラー結果をCSVで出力します。エラーを修正すれば再登録できます。<br />
<% form_tag location , {:method=>:post , :multipart => true} do %>
<%#= hidden_field_tag('item[file]','up') %>
<table class="show">
	<!--
<tr>
  <th>文字コード</th>
  <td>
    <%= radio_button_tag('item[nkf]', 'sjis',false   ) %><label for="item_nkf_sjis" >SJIS</label>
    <%= radio_button_tag('item[nkf]', 'utf8',true  ) %><label for="item_nkf_utf8" >UTF8</label>
  </td>
</tr>
	-->
<tr>
  <th>対象ファイル</th>
  <td><%= file_field_tag('item[file]' , :size=>80 , :accept=>'text/csv,text/plain') %></td>
</tr>
<tr>
  <th>ファイル形式</th>
  <td>
    <%= radio_button_tag('item[file_type]', 'csv',false   ) %><label for="item_file_type_csv" >CSV (MS Outlook)形式</label>
    <%= radio_button_tag('item[file_type]', 'ical',true  ) %><label for="item_file_type_ical" >iCal形式</label>
  </td>
</tr>
</table>
<div class="submitters"><%= submit_tag '保存' %></div>
<% end %>
<br />
<%
end

body = {  :header => <<-EOL,
#{show_notice}
<div class="titleLine">
<span class="title">個人設定</span>
</div>
EOL
  :body => <<-EOL
<a name="#{@key}"></a>
#{@content_for_item}
EOL
}
concat hhbff_struct(:schedulePiece, :setting, :header=>header, :body=>body)
%>

<% _path = '/_attachs/gwmonitor_base/'%>
<%
  if @item.blank?
    mce_base_url = ''
  else
    mce_base_url = _path + sprintf("%06d", @item.title_id) + '/' + @item.name + "/" unless @item.name.blank?
  end

  item = Gw::UserProperty.new
  item.and :class_id, 3
  item.and :name, 'gwmonitor'
  item.and :type_name, 'help_link'
  help = item.find(:first)
  array_help = Array.new(5, ['', '', '', '', ''])
  begin
  array_help = JsonParser.new.parse(help.options) if help.present? && help.options.present?
  rescue
  end

%>
<%= tool_tiny_mce(mce_base_url, {:leftbar_mode=>false}) %>

<%= gw_js_include_full %>

<%= %Q(<div class="notice">#{flash[:notice]}</div>) if flash[:notice] %>


<table class="show bbsText">
<tr>
<th>タイトル<%= required('※') %></th>
</tr>
<tr>
<td><%= f.text_area :title, :cols => '140', :rows=>"1", :style => 'width:100%; height:40px'%></td>
</tr>
<tr>
<th>概要説明</th>
</tr>
<tr>
<td class="mceEditor"><%= f.text_area :caption, :class => 'mceEditor', :style => 'width:100%; height:350px;' %></td>
</tr>
</table>
<%=gwmonitor_base_attachments_form(f, @item)%>

<%= hidden_field_tag("item[state]", @item.state, :id=>"item_state") %>
<table class="show bbsText">
<tr><th>記事管理設定</th>
<td><%= f.select :admin_setting, @item.admin_setting_name , :class => 'admin_setting'%><span class="help"><%=array_help[0]%></span></td></tr>
<tr><th>回答表示設定</th>
<td><%= f.select :spec_config, @item.spec_config_name , :class => 'admin_setting'%><span class="help"><%=array_help[1]%></span></td></tr>
<tr><th style="width:180px;">所属全員へのリマインダー表示</th>
<td><%= f.select :reminder_start_section, @item.reminder_start_name , :class => 'admin_setting'%><span class="help"><%=array_help[2]%></span></td></tr>
<tr><th>回答期限日時<%= required('※') %></th>
<td>
<%
  dd = Gw.date8_to_date(params[:expiry_date], :default=>'')
  # date_picker は、f.text_field をそのまま呼ぶため、nil 渡しで DB 値を読んでくれるが、
  # date_picker2 は、text_field_tag 利用のため、value はセット済で呼んでやる必要がある。
  # 現時点では必ずフォーマット済日付をわたすようにしている。
  d_load_org = params[:expiry_date].nil? ? nil : dd == '' ? nil : Gw.datetime_str(dd)
  d_load = Gw.datetime_str(d_load_org.nil? ? @item.expiry_date : d_load_org)
  concat "#{date_picker3 f, 'expiry_date', d_load, :errors=>@item.errors}"
%></td></tr>
</table>

<%= f.hidden_field :send_change, :value => @item.send_change %>

<%=render(:partial => '/gwmonitor/admin/commissions/form')%>

<script type="text/javascript">
//<![CDATA[
  function chageDisp(obj,changeObjId) {
    var display = document.getElementById(changeObjId).style.display;
    if (display == '') {
      obj.innerHTML = '開く▼';
    } else if (display == 'none') {
      obj.innerHTML = '閉じる▲';
    }
    Element.toggle($(changeObjId));
  }
//]]>
</script>

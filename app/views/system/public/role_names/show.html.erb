<%# app/views/system/public/role_names/show.html.erb %>
<%
t01 = '編集'
edit_path       = "#{Site.current_node.public_uri}#{@item.id}/edit"
t02 = '削除'
delete_path     = "#{Site.current_node.public_uri}#{@item.id}"
%>
<div class="piece AdminMessage">

<%= render :partial => 'header' %>
<div class="pieceBody">
<div class="editingBox">
 <span class="btEdit"><%= link_to t01 , url_for(edit_path) if @item.editable? %></span>
 <span class="btDestroy"><%= link_to t02 , url_for(delete_path),:confirm=>"削除して、よろしいですか？",:method=>:delete if @item.deletable?%></span>
</div>

<table class="show">
  <tr>
    <th>機能名</th>
    <td><%=h @item.display_name %></td>
  </tr>
  <tr>
    <th>機能コード</th>
    <td><%=h @item.table_name %></td>
  </tr>
  <tr>
    <th>表示順</th>
    <td><%=h @item.sort_no %></td>
  </tr>
  <tr>
    <th>割り当て権限名</th>
    <td><%=h Gw.join [System::RoleNamePriv.get_priv_names(@item.id)], '、' %></td>
  </tr>
</table>
<!--戻るボタン-->
<div class="btReturn">
  <%=link_to '戻る', Gw.chop_with("#{Site.current_node.public_uri}",'/') %>
</div>
</div>
</div>
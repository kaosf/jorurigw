<%# app/views/system/public/roles/edit.html.erb %>
<%
if @role_id == '0'
  role_param =""
else
  role_param ="?role_id=#{@role_id}"
end
@edit_path = "#{Site.current_node.public_uri}#{@item.id}"
@edit_path += role_param
%>
<div class="piece AdminMessage">

<%= render :partial => 'header' %>
<div class="pieceBody">
<% form_for :item, :url => @edit_path, :html => {:method => :put, :multipart => true, :id => 'itemForm'} do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <%= submit_for(f, {:caption => '保存'}) %>
<% end %>
</div>
</div>

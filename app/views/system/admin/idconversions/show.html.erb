<!-- table column get and conversion go -->
<%  _tablename = @item.tablename
    _model = @item.modelname.blank? ? _tablename.singularize.split('_').collect{|x| x.capitalize}.join('::') : @item.modelname
    _cols = eval(_model).column_names
    _columns = _cols.join(':')
    _count = eval(_model).count(:all)
%>
<br/>
<p>変換対象テーブルのカラム一覧　<%= "対象件数：#{_count}件"%></p>

<div class="bbsDocList circular setting">
<div class="pieceHeader">
<h2>回覧板</h2>
</div>
<div class="pieceBody">
<% form_for :item, :url => "#{Site.current_node.public_uri}" ,:action=>:create ,:html => {:method=>:post , :multipart => true, :id => 'itemForm'} do |f| %>

<%= f.error_messages %>

<%= render :partial => 'form', :locals => {:f => f} %>

<%#このsubmitはJSを呼んで更新処理をかけているので変更してはいけない%>
<%= submit_for_update(f, :js_submitter => 'my_submit()') %>

<% end %>
</div>
</div><!--bbsDocList circular setting-->

<%# app/views/gw/public/todos/_new.html.erb %>
<%
concat render(:partial => '/gw/public/todos/header')
header = <<-EOL
#{render :partial => '/gw/public/todos/piece_header'}
EOL
@content_for_form = ''
content_for :form do
  form_for :item, :url => '/gw/todos', :html => {:multipart => true, :id => 'itemForm'} do |f|
    concat <<-EOL
#{f.error_messages}
#{render(:partial => 'form', :locals => {:f => f})}
#{submit_for_create(f)}
EOL
  end
end
body = { :body => @content_for_form }
concat hhbff_struct(:todo, :form, :header=>header, :body=>body)
%>

<%# app/views/system/admin/groups/csvup.html.erb %>
<% location = csvadd_system_groups_path %>
<h4>ＣＳＶ追加</h4>
<div>
<span style="color:red">登録済データに、追加登録となります。</span>
</div>
<% form_tag location , {:method=>:post , :multipart => true} do %>
<%= hidden_field_tag('item[csv]','up') %>
<table class="show">
<tr>
<th></th>
<td>登録対象ＣＳＶファイルと文字コードを選択して実行してください</td>
</tr>
<tr>
<th>文字コード</th>
<td>
<%= radio_button_tag('item[nkf]', 'utf8',true) %><label for="item_nkf_utf8">UTF8</label>
<%= radio_button_tag('item[nkf]', 'sjis',false ) %><label for="item_nkf_sjis" >SJIS</label>
</td>
</tr>
<tr>
<th>ファイル</th>
<td><%= file_field_tag( 'item[file]' ,:size=>80 )%></td>
</tr>
</table>
<br />
<%= submit_tag 'CSV追加' %>
<% end %>

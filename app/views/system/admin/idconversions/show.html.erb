  <tr>
    <th><%= "#{_model}" %></th>
    <td><%= "#{_columns}" %></td>
  </tr>
</table>
<br/>
<% if @item.converted_at.blank? %>
  <div class="showMenu">
  <%= link_to '変換実行' , edit_system_idconversion_path(@item.id ,:convert=>"#{_model}") %>
  </div>
<% else %>
  <div class="showMenu">
  <%=h '変換済み' %>
  </div>
<% end %>

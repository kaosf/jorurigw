<div class="bbsDocList circular">
<div class="pieceHeader"><h2 class="pieceTitle"><%=@system_title%></h2></div>

<div class="pieceBody">
<%= render :partial => 'header' %>

<%= render :partial => 'title_info' %>

<% form_for :item, :url => "#{@title.preview_path}" ,:action=>:create ,:html => {:method=>:post , :multipart => true, :id => 'itemForm'} do |f| %>

<%= f.error_messages %>

<%= render :partial => 'form', :locals => {:f => f} %>

<%= submit_for_create(f ,:caption=>'回答する') %>

<% end %>

 <div align="center">
 <table>
 <tr>
   <td><div class="btReturn"><%=link_to('設問登録へ戻る', @title.form_field_path) %></div></td>
 <%if @title.state == 'draft'%>
   <td>&nbsp;&nbsp;</td>
   <td><div class="btReturn"><%=link_to('受付開始', @title.open_enq_path, :method => :open_enq) %></div></td>
 <%end%>
 </tr>
 </table>
 </div>

</div>
</div>

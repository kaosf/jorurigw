<%#*<p>Find me in app/views/gw/public/edit_tabs/index.html.erb</p>%>
<%
  cond  = " state!='deleted' and parent_id=#{@parent.id} "
  order = " sort_no "
  max_count = Gw::EditTab.count(:all,:conditions=>cond,:order=>order)
#  pp ['max_count',max_count]
  %>

<div class="piece AdminSetting">

<%= render :partial => 'header_str' %>

<div class="pieceBody">
  <%= render :partial => 'header_new_botton' %>
  <%= render :partial => 'header_navi' %>
  <%= div_notice %>
  <% if max_count==0 -%>
  <div class="notice">表示対象がありません。</div>
  <% else -%>
  <table class="index">
    <tr>
    <% unless @parent.level_no == 3 %>
      <th class="action"><%# 展開 %></th>
    <% end %>
    <th class="action"><%# 詳細 %></th>
    <th class="state">公開</th>
    <th class="state">状態</th>
    <th class="sort" colspan="2" >並び順</th>
    <th class="title">表示名</th>
    <% if @parent.level_no ==3 %>
    <th class="url">リンク先URL</th>
    <th class="ext">接続先区分</th>
    <th class="sso">SSO利用</th>
    <% end %>
    <% if @parent.level_no >= 2 %>
    <th class="is_public">公開区分</th>
    <% end %>
    </tr>
    <% @c_idx = 0 %>
    <% @items.each do |item| -%>
      <%
        f_expand = true
        if @parent.level_no == 3
          f_expand = false
        end
        if item.other_controller_use == 1
          f_expand = false
        end
      %>
      <%
        if item.state == 'enabled'
          item_state_color = ''
        else
          item_state_color = 'class="required"'
        end
        if item.published == 'opened'
          item_published_color = ''
        else
          item_published_color = 'class="required"'
        end
        if item.state == 'enabled' and item.published == 'opened'
          item_name_color = ''
        else
          item_name_color = 'class="required"'
        end
      %>
      <%
        @c_idx = @c_idx + 1
        cond_up   = true
        cond_down = true
        if max_count==1
          cond_up   = false
          cond_down = false
        else
          if @c_idx == 1
            cond_up = false
          else
            if @c_idx == max_count
              cond_down = false
            end
          end
        end
      %>
    <tr <%= cycle '', 'class="cycle"' %> >
      <% unless @parent.level_no == 3 %>
        <td><%= link_to '展開' , "#{Gw.chop_with(Site.current_node.public_uri,'/')}?pid=#{item.id}"  if f_expand == true %></td>
      <% end %>
      <td><%= link_to '詳細' , "#{Site.current_node.public_uri}#{item.id}?pid=#{@parent.id}" %></td>
      <td><span <%= item_published_color %> ><%= Gw::EditTab.published_show(item.published) %></span></td>
      <td><span <%= item_state_color %> ><%= Gw::EditTab.state_show(item.state) %></span></td>
      <td class="up" ><%= link_to '▲'   , "#{Site.current_node.public_uri}#{item.id}/updown?pid=#{@parent.id}&order=up"   if cond_up   == true %></td>
      <td class="down" ><%= link_to '▼'   , "#{Site.current_node.public_uri}#{item.id}/updown?pid=#{@parent.id}&order=down" if cond_down == true %></td>
      <td><span <%= item_name_color %> ><%= item.name %></span></td>
      <% if @parent.level_no ==3 %>
      <td><%= item.link_url %></td>
      <td><%= Gw::EditTab.external_show(item.class_external) %></td>
      <td><%= Gw::EditTab.sso_show(item.class_sso) %></td>
      <% end %>
      <% if @parent.level_no >= 2 %>
      <td><%= Gw::EditTab.is_public_show(item.is_public) -%></td>
      <% end %>
    </tr>
    <% end -%>
  </table>
  <%= paginate @items %>
  <% end -%>
</div>

</div>

<table class="index">
  
  <tr>
    <% if @parent.level_no < @max_level - 1 %>
    <th style="width: 60px; text-align: center;">Open</th>
    <% end %>
    <th style="width: 60px; text-align: center;">Show</th>
    <th style="width: 60px; text-align: right;">Id</th>
    <th style="width: 20%;">Name</th>
    <th style="width: ;">Title</th>
    <th style="width: 60px; text-align: right;">Sort no</th>
    <th style="width: 60px; text-align: center;">Status</th>
  </tr>
  
  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <% if @parent.level_no < @max_level - 1 %>
    <td style="text-align: center;"><%= link_to_list item %></td>
    <% end %>
    <td style="text-align: center;"><%= link_to_show item %></td>
    <td style="text-align: right;"><%=h item.id %></td>
    <td><%=h item.name %></td>
    <td><%=h item.title %></td>
    <td style="text-align: right;"><%= item.sort_no %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>

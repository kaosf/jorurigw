<%# app/views/gwsub/public/sb04/sb04divideduties/edit %>
<%
name_jp = nil
fyear = Gw::YearFiscalJp.find(@items[0].fyear_id)
name_jp = fyear.namejp unless fyear.blank?
if name_jp.blank?
  header_str = nil
else
  header_str = "#{name_jp}年度　電子職員録詳細"
end
@edit_path = "#{Site.current_node.public_uri}#{@items[0].id}/assigned_job_update#{@param}"
@action = "edit"
-%>

<div class="gwsub sb04">
<%= render :partial => 'gwsub/public/sb04/sb04_piece_header' %>
<div class="pieceBanner">
<%= render :partial => 'gwsub/public/sb04/sb04_submenu' %>
</div>
<div class="pieceBody">
<%= div_notice %>
<div class="btReturn">
<%= link_to '詳細に戻る',"/gwsub/sb04/02/sb04divideduties/#{@item.id}#{@param}" %>
</div>
<% form_for :assigned_job, :url => @edit_path ,:action=>:update, :html => {:method => :put, :multipart => true} do |f| %>
  <%= render :partial => 'assigned_job_form', :locals => {:f => f} %>
<% end %>
<div><h4><%= h header_str %></h4></div>
<%= render :partial => 'gwsub/public/sb04/sb04divideduties/show' %>
</div>
</div>

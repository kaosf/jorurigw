<div class="indexTabs">
<%=link_to 'ディレクトリ', cms_nodes_path(@parent) %>
<span>ページ</span>
</div>

<table class="index">
  
  <tr>
    <th style="width: 60px; text-align: center;">Show</th>
    <th style="width: 60px; text-align: right;">Id</th>
    <th style="width: 15%;">Name</th>
    <th style="width: ;">Title</th>
    <th style="width: 20%; text-align: center;">Creator</th>
    <th style="width: 60px; text-align: center;">Inside</th>
    <th style="width: 60px; text-align: center;">Outside</th>
    <th style="width: 60px; text-align: center;">Preview</th>
  </tr>
  
  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to_show item %></td>
    <td style="text-align: right;"><%=h item.id %></td>
    <td><%=h item.name %></td>
    <td><%=h item.title %></td>
    <td><%=h item.creator.user.display_name if item.creator && item.creator.user %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
    <td style="text-align: center;"><%= item.public_status %></td>
    <td style="text-align: center;"><%= link_to_preview item %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>

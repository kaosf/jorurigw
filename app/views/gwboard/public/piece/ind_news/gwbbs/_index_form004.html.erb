<%
if @items.length > 0
  brk_key = nil
  concat '<table class="index">'
  idx = 1
  @items.each do |item|
    break if idx > @limit_portal.to_i
    unless brk_key == item.latest_updated_at.strftime('%Y-%m-%d').to_s
      concat %Q(<tr><th colspan="5"><h4>#{item.latest_updated_at.strftime('%Y-%m-%d').to_s}</h4></th></tr>)
    end
    if item.importance.to_i == 1
      importance_str = ''
    else
      importance_str = %Q(<span>#{item.importance}</span>)
    end
    if item.attachmentfile.to_i == 0
      attachmentfile_str = ''
    else
      attachmentfile_str = %Q(<span>#{item.attachmentfile}</span>)
    end
    if item.one_line_note.to_i == 0
      comment_str = ''
    else
      if item.comment.count.to_i==0
        comment_str = %Q(<span>　</span>)
      else
        comment_str = %Q(<span>#{item.comment.count}</span>)
      end
    end
    concat %Q(<tr>)
    concat %Q(<td class="bbsImportant">#{importance_str}</td>)
    concat %Q(<td class="title">#{link_to(hbr(item.title), item.portal_show_path + gwbbs_params_set)}</td>)
    concat %Q(<td class="bbsAttach">#{attachmentfile_str}</td>)
    concat %Q(<td class="bbsBalloon">#{comment_str}</td>)
    concat %Q(<td class="group">#{item.section_name}</td>)
    concat %Q(</tr>)
    brk_key = item.latest_updated_at.strftime('%Y-%m-%d').to_s
    idx = idx + 1
  end
  concat '</table>'
else
  concat '<div class="pieceBody" style="color: #080;">表示する内容はありません。</div>'
end
%>

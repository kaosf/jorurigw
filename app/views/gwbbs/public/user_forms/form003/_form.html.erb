<%# おくやみ -%>
<%
  notes01 = []#時間
  notes01 = JsonParser.new.parse(@title.notes_field01) unless @title.notes_field01.blank?
  notes02 = []#家族or職員の選択
  notes02 = JsonParser.new.parse(@title.notes_field02) unless @title.notes_field02.blank?
  notes03 = []#通夜通知するorしないの選択
  notes03 = JsonParser.new.parse(@title.notes_field03) unless @title.notes_field03.blank?
  @item.inpfld_022 = '0' if @item.inpfld_022.blank?
%>
<table class="show">
<tr><th><div><%= radio f, :inpfld_024 , notes02 , :class => 'state'  ,:onclick => 'sel_class2()' %></div></th></tr>
<tr><td>
 <%#所属名%>
 <%= f.select(:inpfld_023, Gwboard::Group.level3_all.collect{|i|
  [i.name, i.code]}, :include_blank => '所属課を選択してください。') %>
 <%#役職名%>
 [役職]<%= f.text_field :inpfld_012, :size=>"10"%>
</td></tr>
<tr><td><div>
<div id="item_proposal_type1" style="display:inline;" >
<%#故人の親族%>
<%= f.text_field :inpfld_013, :size=>"20"%>さんの　
<%#続柄%>
<span title="記入例 父, 母, 義父, 義母, 配偶者, 子">[続柄]</span><span title="記入例 父, 母, 義父, 義母, 配偶者, 子"><%= f.text_field :inpfld_014, :size=>"10"%></span>
<%#故人名%>
<%= f.text_field :inpfld_015, :size=>"20"%>様が
</div>
<div id="item_proposal_type2" style="display:none;" >
<%#故人%>
<%= f.text_field :inpfld_025, :size=>"20"%>さんが
</div></div></td></tr>
<tr><td>
 <%#亡くなられた日付%>
 <%
  [:inpfld_001].each do |x|
   concat %Q[#{f.text_field x, :style => 'width:10em;'}]
   concat %Q[<button type="button" id="#{x}_bt" onclick="showCalendar('#{x}_bt','#{f.object_name}_#{x}')" class="show_cal_bt"></button>]
  end
 %>に亡くなられました。
</td></tr>
</table>

<table class="show">
<%#通夜入力ありなし%>
<tr><th><div><%= radio f, :inpfld_022 , notes03 , :class => 'state'  ,:onclick => 'sel_class1()' %></div></th></tr>
</table>

<div id="item_input_type1" style="display:inline;">
<table class="show bbsText">
<tr><th colspan="2">通夜は、次のとおり執り行われます。</th></tr>
<tr>
<th style="width: 120px;">1 日時</th>
<td>
 <%
  [:inpfld_003].each do |x|
   concat %Q[#{f.text_field x, :style => 'width:10em;'}]
   concat %Q[<button type="button" id="#{x}_bt" onclick="showCalendar('#{x}_bt','#{f.object_name}_#{x}')" class="show_cal_bt"></button>]
  end
 %>
 <%= f.select :inpfld_018, notes01, :include_blank=>''%>～<%= f.select :inpfld_019, notes01, :include_blank=>''%>
</td>
</tr>
<tr>
<th>2 場所</th>
<td><%= f.text_area :inpfld_004, :style => 'width:100%; height:100px' %></td>
</tr>
<tr>
<th>　電話</th>
<td ><%= f.text_field :inpfld_005, :size=>"20"%></td>
</tr>
</table>
</div>

<table class="show bbsText">
<tr><th colspan="2">告別式は、次のとおり執り行われます。</th></tr>
<tr>
<th style="width: 120px;">1 日時</th>
<td>
 <%
   [:inpfld_006].each do |x|
    concat %Q[#{f.text_field x, :style => 'width:10em;'}]
    concat %Q[<button type="button" id="#{x}_bt" onclick="showCalendar('#{x}_bt','#{f.object_name}_#{x}')" class="show_cal_bt"></button>]
   end
 %>
 <%= f.select :inpfld_020, notes01, :include_blank=>'' %>～<%= f.select :inpfld_021, notes01, :include_blank=>'' %>
</td>
</tr>
<tr>
<th>2 場所</th>
<td><%= f.text_area :inpfld_007, :style => 'width:100%; height:100px' %></td>
</tr>
<tr>
<th>　電話</th>
<td><%= f.text_field :inpfld_008, :size=>"20"%></td>
</tr>
<tr>
<th>3 喪主</th>
<td><%= f.text_field :inpfld_009, :size=>"60"%></td>
</tr>
<tr>
<th>4 宗派・宗教</th>
<td><%= f.text_field :inpfld_010, :size=>"10"%>　(記入例 仏式, 神式)</td>
</tr>
<tr>
<th style="width: 120px;">5 備考</th>
<td><%=f.text_area :inpfld_016, :style => 'width:100%; height:60px' %></td>
</tr>
</table>
<table class="show bbsText">
<tr><th>6 地図<%=@title.notes_field10%></th></tr>
<tr><td><%=f.text_area :inpfld_011,:style => 'width:740px' %></td></tr>
</table>


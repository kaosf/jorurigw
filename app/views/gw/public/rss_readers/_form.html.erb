<%= f.error_messages %>
<%= f.hidden_field :sort_no %>
<%= required_head %>
<br>
<table class="show">
  <tr>
    <th>状態</th>
    <td><%= radio f, :state, Gw::RssReader.state_select_list, :class=>'state' %></td>
  </tr>
  <tr>
    <th>並び順</th>
    <td><%= @item.sort_no %></td>
  </tr>
  <tr>
    <th>タイトル<%= required %></th>
    <td><%= f.text_field :title, :size=>80 %></td>
  </tr>
  <tr>
    <th>URI<%= required %></th>
    <td><%= f.text_field :uri, :size=>80, :class=>'IMEoff' %></td>
  </tr>
  <tr>
    <th>最大取得件数</th>
    <td><%= f.select :max, Gw::RssReader.max_select_list, :selected => @item.max %></td>
  </tr>
  <tr>
    <th>更新時間間隔</th>
    <td><%= f.select :interval, Gw::RssReader.interval_select_list, :selected => @item.interval %>分</td>
  </tr>
</table>

<div class="preserve">
  <%= f.submit '保存' %>
</div>
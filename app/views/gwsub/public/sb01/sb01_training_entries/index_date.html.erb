<%#*<p>Find me in app/views/gwsub/public/sb01/sb01_training_entries/index.html.erb</p>%>
<div class="gwsub sb01">
<div class="pieceHeader">
<h2>研修申込・受付</h2>
</div>
<div class="pieceBanner">
<%= render :partial => 'gwsub/public/sb01/sb01_training_entries/menu' %>
</div>
<div class="pieceBody">
<%= div_notice %>
<% if @items.blank?%>
<div class="notice">表示する項目はありません。</div>
<%else%>
<%= div_notice %>
<table class="index">
  <tbody>
    <tr>
      <th>詳細</th>
      <th>申込</th>
      <th>研修名
        <%= link_to '▲', Site.current_node.public_uri+"index_date?sort_keys=gwsub_sb01_trainings.title asc" %>
        <%= link_to '▼', Site.current_node.public_uri+"index_date?sort_keys=gwsub_sb01_trainings.title desc" %></th>
      <th>開催日
        <%= link_to '▲', Site.current_node.public_uri+"index_date?sort_keys=from_start asc" %>
        <%= link_to '▼', Site.current_node.public_uri+"index_date?sort_keys=from_start desc" %></th>
      <th>開始時刻</th>
      <th>終了時刻</th>
      <th>定員  </th>
      <th>受付</th>
      <th>企画所属 </th>
      <th>最終更新日</th>
    </tr>
<%for item in @items%>
<tr <%= cycle '', 'class="cycle"' %>>
<%
schedule_check = Gwsub::Sb01TrainingSchedule.schedule_link_check(item.schedule_id)
if schedule_check == true
  skd_link = "/gwsub/sb01/sb01_training_schedule_members/new?t_id=#{item.training_id}&p_id=#{item.id.to_s}&t_menu=entries"
  entry_link = %Q(<a href="#{skd_link}">申込む</a>)
else
  entry_link = "申込む"
end
if item.state == '3'
  entry_link = %Q(<span class="required">締切</span>)
end
%>
  <td><a href="/gwsub/sb01/sb01_training_schedules/<%=item.id%>?t_id=<%=item.training_id%>&t_menu=entries">詳細</a></td>
  <td><%=entry_link%></td>
  <td><%=h item.training.title %></td>
  <td><%=h item.from_start.strftime("%Y-%m-%d") unless item.from_start.blank?%> (<%=ass{Gw.weekday(item.from_start.wday)} unless item.from_start.blank?%>)</td>
  <td><%=h item.from_start.strftime('%H:%M')  unless item.from_start.blank?%></td>
  <td><%=h item.from_end.strftime('%H:%M')  unless item.from_end.blank?%></td>
  <td><%=h item.members_max %></td>
  <td><%=h item.members_current %></td>
  <td><%=h item.training.group_name %></td>
  <td><%=h item.updated_at.strftime('%Y-%m-%d') unless item.updated_at.blank?%></td>
</tr>
<% end %>
</tbody></table>
<br/>
<%= paginate @items%>
<br/>
<% end %>
</div>
</div>

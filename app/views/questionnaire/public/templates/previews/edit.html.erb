<div class="bbsDocList circular">
<%= render :partial => 'header' %>

<div class="pieceBody">
<%= render :partial => 'header_tab' %>
<%= render :partial => 'title_info' %>

<% form_for :item, :url => @item.update_path ,:html => {:method=>:put , :multipart => true, :id => 'itemForm'} do |f| %>

<%= f.error_messages %>

<%= render :partial => 'form', :locals => {:f => f} %>

<%= submit_for_update(f, :caption=>'回答する') %>

<% end %>
</div>

<div class="btReturn"><%=link_to('テンプレート管理一覧へ戻る', "#{@system_path}") %></div>

</div>

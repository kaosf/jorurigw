<div class="bbsDocList circular">
<div class="pieceHeader"><h2 class="pieceTitle"><%=@system_title%></h2></div>

<div class="pieceBody">
<%= render :partial => 'header' %>

<%= render :partial => 'title_info' %>

<table class="index">
<tr>
<th style="width: 70px;"></th>
<th>回答者</th>
<th style="width: 120px;">回答日時</th>
</tr>
<%for item in @items%>
 <tr <%= cycle 'class="article"', 'class="article cycle"' %>>
 <td style="width:70px;text-align: center;"><%=link_to('詳細確認' ,item.edit_path)%></td>
 <td><%=link_to("#{item.target_user_name}", item.edit_path)%></td>
 <td><%=item.updated_at.strftime('%Y-%m-%d %H:%M').to_s unless item.updated_at.blank?%></td>
 </tr>
<%end%>
</table>

<%= paginate @items %>

 <div align="center">
 <table>
 <tr>
   <td><div class="btReturn"><%=link_to('設問登録へ戻る', @title.form_field_path) %></div></td>
 <%if @title.state == 'draft'%>
   <td>&nbsp;&nbsp;</td>
   <td><div class="btReturn"><%=link_to('受付開始', @title.open_enq_path, :method => :open_enq) %></div></td>
 <%end%>
 </tr>
 </table>
 </div>

</div>
</div>

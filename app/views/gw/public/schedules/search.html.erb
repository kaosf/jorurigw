<% # app/views/gw/public/schedules/search.html.erb
d = @st_date # 初期化処理
#concat show_all_groups_hidden_popups(d)
d8_s = Gw.date8_str(d)
%>

<div class="piece schedulePiece setting">
  <div class="pieceHeader">
    <%= show_notice -%>
    <%= render(:partial => '/gw/public/schedules/piece_header') -%>
  </div>
  <div class="pieceBody">
    <div class="pieceBodyHeader">
      <%= render(:partial => '/gw/public/schedules/schedule_bt_box', :locals=>{:d=>Date.today, :mode=>'form'}) -%>
    <div class="pieceBodyBody">
      <div>
        <table class="index">
          <tbody>
            <% @items.each do |item| %>
            <tr <%= cycle '', 'class="cycle"' %> >
              <td><%= item[0] %></td>
              <td><%= %Q(<a href="/gw/schedules/#{d8_s}?gid=#{item[2].id}">日表示</a>) if item[2].level_no != 2 %></td>
              <td><%= %Q(<a href="/gw/schedules/?s_date=#{d8_s}&amp;gid=#{item[2].id}">週表示</a>) if item[2].level_no != 2 %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%  unless @folders.blank? %>
  <table class="docFolder">
    <tr>
      <th style="text-align: left;">フォルダ名</th>
      <th style="width: 120px; text-align: center;">登録日</th>
      <th style="width: 120px; text-align: center;">更新日</th>
    </tr>
    <% for folder in @folders %>
    <tr>
      <td class="noneLeft"><%= link_to folder.name, folder_doclib_category_qstring(folder) %></td>
      <td><%= folder.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      <td class="noneRight"><%= folder.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
    </tr>
    <% end %>
  </table>
  <%=paginate @folders %>
<% end %>

<%unless @items.blank?%>
  <table class="docformTitle">
    <tr>
      <th style="text-align: left;">ファイル名</th>
      <th style="width: 120px; text-align: center;">登録日</th>
      <th style="width: 120px; text-align: center;">更新日</th>
    </tr>
  <% for item in @items %>
    <tr>
      <td>
        <%unless params[:state] == 'GROUP'%>
          <%= link_to(item.title, item.show_path(params[:state]))%>
        <%else%>
          <%= link_to(item.title, item.show_path(params[:state]) + "&grp=#{@groups[item.section_code][:id]}")%>
        <%end%>
      </td>
      <td><%= item.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      <td><%= item.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
    </tr>
  <% end %>
</table>
<%=paginate @items %>
<% end %>

<%unless @files.blank?%>
<table class="gwboardAttachlist">
  <tr>
    <th style="width: 24px; text-align: center;"></th>
    <th style="text-align: left;">添付ファイル名</th>
    <th style="width: 220px; text-align: left;">備考</th>
  </tr>
  <% for item in @files %>
    <tr>
      <td><%= link_to('',"/_admin/gwboard/receipts/#{item.id}/download_object?system=#{item.system_name}&title_id=#{item.title_id}",:class => item.icon_type ) %></td>
      <td><%= link_to(%Q[#{item.filename} (#{item.eng_unit})],"/_admin/gwboard/receipts/#{item.id}/download_object?system=#{item.system_name}&title_id=#{item.title_id}") %></td>
      <td><%=item.memo%></td>
    </tr>
  <% end %>
</table>
<%=paginate @files %>
<% end %>

<%# app/views/system/public/roles/show.html.erb %>
<%
t01 = '編集'
edit_path       = "#{Site.current_node.public_uri}#{@item.id}/edit"
t02 = '削除'
delete_path     = "#{Site.current_node.public_uri}#{@item.id}"
%>
<div class="piece AdminMessage">

<%= render :partial => 'header' %>
<div class="pieceBody">
<div class="editingBox">
 <span class="btEdit"><%= link_to t01 , url_for(edit_path) if @item.editable? %></span>
 <span class="btDestroy"><%= link_to t02 , url_for(delete_path),:confirm=>"削除して、よろしいですか？",:method=>:delete if @item.deletable?%></span>

</div>

<table class="show">
  <tr>
    <th>機能名</th>
    <td><%=h ass{@item.role_name.display_name} %></td>
  </tr>
  <tr>
    <th>対象権限</th>
    <td><%=h ass{@item.priv_user.display_name} %></td>
  </tr>
  <tr>
    <th>優先順位</th>
    <td><%=h @item.idx %></td>
  </tr>
  <tr>
    <th>種別</th>
    <td><%=h ass{@item.class_id_label} %></td>
  </tr>
  <tr>
    <th>ユーザ/グループ</th>
    <td><%=h @item.uid_label %></td>
  </tr>
  <tr>
    <th>許可</th>
    <td><%=h ass{@item.priv_label}%></td>
  </tr>
</table>
<!--戻るボタン-->
<div class="btReturn">
  <%=link_to '戻る', Gw.chop_with("#{Site.current_node.public_uri}",'/') %>
</div>
</div>
</div>

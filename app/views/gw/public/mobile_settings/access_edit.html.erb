<%#*<p>Find me in app/views/gw/public/mobile_settings/access_edit.html.erb</p>%>
<%
@action = "edit"
@edit_path = "#{Site.current_node.public_uri}access_updates"
form_str = "access_form"
%>
<div class="piece mobile setting">

<%= render :partial => 'header_str' %>

<div class="pieceBody">
<%= div_notice %>
<div class="btReturn">
  <%=link_to '個人設定へ戻る', "/gw/config_settings/ind_settings?#{@qs}" %>
</div>
<% form_for :user, :url => @edit_path ,:action=>:update, :html => {:method => :put, :multipart => true} do |f| %>
  <%= f.error_messages %>
  <%= render :partial => form_str, :locals => {:f => f} %>
  <%= submit_for(f, {:caption => '保存'}) %>
<% end  %>
</div>
</div>

<table class="index">
  
  <tr>
    <th style="width: 60px; text-align: center;">Show</th>
    <th style="width: 60px; text-align: right;">Id</th>
    <th style="width: 120px; text-align: center;">Date</th>
    <th style="width: ;">Title</th>
    <th style="width: 60px; text-align: center;">Status</th>
  </tr>
  
  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to_show item %></td>
    <td style="text-align: right;"><%=h item.id %></td>
    <td style="text-align: center;"><%=h item.published_at.strftime('%Y-%m-%d %H:%M') %></td>
    <td><%=h item.title %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>

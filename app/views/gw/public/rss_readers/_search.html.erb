<% form_tag '', :method => :get, :class => 'search', :name => 'frmSearch' do %>
<table class="search">
<tr>
  <td class="limit">表示行数</td>
  <td class="search">検索</td>
  <td class="none"></td>
  <td class="none"></td>
  <td class="none"></td>
</tr>
<tr>
  <td class="select"><%= select_tag 'limit', options_for_select(Gw.limit_select, params[:limit].to_i) %></td>
  <td class="s_keyword" colspan="3"><%= text_field_tag "s_keyword", params[:s_keyword], :size=>50 %></td>
  <td class="submitters" colspan="2">
  <%= submit_tag '検索',     :name => :search %>
  <%= submit_tag 'リセット', :name => :reset %>
</td>
</tr>
</table>
<%end%>
<% if params[:search] %>
<div class="hit">検索結果<span class="count"><%= @items.total_entries %></span>件</div>
<% end %>

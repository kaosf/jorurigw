<%=render :partial => 'header' %>

<table class="index">
<th class="name">名称</th>
<th class="name" colspan="2">背景設定</th>
<th class="update">最終更新日</th>

<% for item in @items %>
 <tr <%= cycle '', 'class="cycle"' %>>
 <td class="name"><%=link_to(item.name,item.show_path) %></td>
 <td style="width:36px;">
 <%unless item.icon_pict.blank? %>
  <%=image_tag(item.icon_pict.file_path, :size=>item.icon_pict.regulate_width(32), :alt=>item.icon_pict.memo) %>
 <%end%>
 </td>
 <%
  s_style = 'style="background-color:#FFFCF0"'
  if item.bg_setup == 0
    s_style = %Q[style="background-color:#{item.css}"]
  else
    s_style = %Q[style="background-image:url('#{item.wall_pict.file_path}');width:#{item.wall_pict.get_width(32)}px;height:32px;"] unless item.wallpaper_id == 0 unless item.wallpaper_id.blank?
 end
 %>
 <td <%=s_style%>>
 <span style="color:<%=item.font_color%>; font-size:larger;">タイトル文字</span>
 </td>
 <td class="update"><%=item.updated_at.strftime('%Y-%m-%d').to_s %></td>
</tr>
<% end %>

</table>

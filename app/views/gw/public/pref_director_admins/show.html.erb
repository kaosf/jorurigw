<div class="piece AdminSetting">

<%= render :partial => 'header_str' %>
<div class="pieceBody">
  <%= render :partial => 'header_new_botton' %>
  <div class="editingBox">
    <span class="btEdit">
    <%= link_to '編集', "#{Site.current_node.public_uri}#{@item.id}/edit" %>
    </span>
    <span class="btDestroy">
    <%= link_to '削除', "#{Site.current_node.public_uri}#{@item.id}" ,:confirm=>"削除してよろしいですか？" , :method=>:delete %>
    </span>
  </div>
  <%= div_notice %>
  <table class="show">
    <tr><th>状態</th><td><%= Gw::PrefAssemblyMember.state_show(@item.state) %></td></tr>
    <tr><th>会派表示順</th><td><%= @item.g_order %></td></tr>
    <tr><th>会派</th><td><%= @item.g_name %></td></tr>
    <tr><th>議員表示順</th><td><%= @item.u_order %></td></tr>
    <tr><th>氏名</th><td><%= @item.u_lname %>　<%= @item.u_name %></td></tr>
    </table>
    <div class="btReturn">
      <%=link_to '一覧', Gw.chop_with("#{Site.current_node.public_uri}",'/')-%>
    </div>

  </div>
</div>

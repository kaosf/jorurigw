<%
  s_cond_btn = ''
  s_cond = '?cond=owner'
  s_cond = '?cond=void' if params[:cond] == 'void'
  s_cond = '?cond=admin' if params[:cond] == 'admin'
  s_cond_btn = '?cond=admin' if params[:cond] == 'admin'
%>
<div class="bbsDocList circular">
<div class="pieceHeader">
<h2 class="pieceTitle">回覧板</h2>
<div class="btsHeaderLeft">
<span class="btNew"><a href="/gwcircular/new">新規作成</a></span>
</div>

<div class="btsHeadeRight">
<%if @is_admin%>
 <span class="btSetAdd"><a href="/gwcircular/settings/">管理者</a></span>
<%else%>
 <span class="btSet"><a href="/gwcircular/settings/">設定</a></span>
<%end%>
</div><!--btsHeadeRight-->

</div><!--pieceHeader-->
<!--カラム用タグ-->
<div class="pieceBanner">
</div>
<div class="pieceBody">
<%=render :partial => 'header' %>
<div class="editingBox">
<span class="btEdit"><%=link_to('編集', "#{@item.edit_path}#{s_cond_btn}")%></span>
<span class="btDestroy"><%=link_to '削除', "#{@item.delete_path}#{s_cond_btn}", :confirm => '削除をすると元に戻せません。削除しますか', :method => :delete %></span>
</div>
  
<div class="docsInnerBox">

<table class="bbsExpirydate">
 <tr>
  <td>　回覧期限日時 : </td>
  <td class="space"></td>
  <td><%=@item.expiry_date.strftime('%Y-%m-%d %H:%M') unless @item.expiry_date.blank?%></td>
 </tr>
</table>

<div class="bbsCreatorInf">
<table>
<tr>
<td>作成 : &nbsp;</td>
<td><%= @item.createrdivision %></td>
<td class="space"></td>
<td><%= @item.creater %></td>
<td class="space"></td>
<td><%= @item.createdate %></td>
</tr>
</table>
</div>

<div class="bbsUserform">
<table class="bbsUserformBody">
<tr><td class="docTitle"><span><%=hbr(@item.title)%></span></td></tr>
<tr><td class="spaceBottom"></td></tr>
<tr><td><%=@item.body%></td></tr>
</table>
</div>

</div><!--docsInnerBox-->

<%=render :partial => 'commissions' %>

<!--戻るボタン-->
<div class="btReturn">
  <%=link_to '回覧板一覧へ戻る', "#{@title.menus_path}#{s_cond}" %>
</div>
</div><!--pieceBody-->
</div><!--piece gwbbs-->


<%
str_tab1_class = 'tab'
str_tab2_class = 'tab'
str_tab3_class = 'tab'
str_tab4_class = 'tab'
str_tab5_class = 'tab'

str_tab1_class += ' current' if params[:state].blank?
str_tab1_class += ' current' if params[:state] == 'DATE'
str_tab1_class += ' current' if params[:state] == 'GROUP'
str_tab1_class += ' current' if params[:state] == 'CATEGORY'
str_tab2_class += ' current' if params[:state] == 'TODAY'
str_tab3_class += ' current' if params[:state] == 'DRAFT'
str_tab4_class += ' current' if params[:state] == 'RECOGNIZE'
str_tab5_class += ' current' if params[:state] == 'PUBLISH'
%>
<%#= render :partial => 'header_help' %>
<!--掲示板タブ-->
<div class="tabBox">
<table class="tabtable">
<tbody>
<tr>
<td class="spaceLeft">
</td><td class="<%=str_tab1_class%>"><%=link_to "公開記事一覧", gwbd_public_url_base %></td>
<td class="spaceCenter"></td>
<td class="<%=str_tab2_class%>"><%=link_to "本日分", gwbd_public_url_base + "&state=TODAY" %></td>
<%if @is_writable%>
 <td class="spaceCenter"></td>
 <td class="<%=str_tab3_class%>"><%=link_to "下書一覧", gwbd_public_url_base + "&state=DRAFT" %></td>
<%end%>
<td class="spaceCenter"></td>
<td class="<%=str_tab4_class%>"><%=link_to("承認待ち", gwbd_public_url_base + "&state=RECOGNIZE")%></td>
<td class="spaceCenter"></td>
<td class="<%=str_tab5_class%>"><%=link_to("承認済み", gwbd_public_url_base + "&state=PUBLISH")%></td>
<td class="spaceRight">
</td></tr>
</tbody>
</table>
</div><!--tabBox-->
<%
  if @item.unid
    mce_base_url = cms_files_path(@item.unid) + "/"
  else
    mce_base_url = cms_tmp_files_path(@item.tmp_id) + "/"
  end
%>
<%= tool_tiny_mce mce_base_url, {:view_mode=>true} %>

<h5><%=h @item.control.title unless @item.control.blank? %></h5>

<div class="showMenu">
  <%=link_to_edit @item %>
  <%=link_to_publish   @item if @item.publishable? %>
  <%=link_to_destroy @item %>
</div>

<table class="show">
  <tr>
    <th>記事番号</th>
    <td><%= @item.id %></td>
  </tr>
</table>
<table class="show">
  <tr>
    <th>質問</th></tr><tr>
    <td class="mceEditor"><%= text_area_tag 'viewBody', @item.body, :class => 'mceEditor', :style => 'width:100%' %></td>
  </tr>
</table>
<table class="show">
  <tr>
    <th>登録日</th>
    <td><%= @item.createdate %></td>
  </tr>
  <tr>
    <th>登録者所属</th>
    <td><%= @item.createrdivision %></td>
  </tr>
  <tr>
    <th>登録者名</th>
    <td><%= @item.creater %></td>
  </tr>
  <tr>
    <th>更新日</th>
    <td><%= @item.editdate %></td>
  </tr>
  <tr>
    <th>編集者所属</th>
    <td><%= @item.editordivision %></td>
  </tr>
  <tr>
    <th>編集者名</th>
    <td><%= @item.editor %></td>
  </tr>
</table>

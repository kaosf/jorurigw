<%
new_f = false
new_f = true if @share_mode.to_s < '2'  #所属は無条件新規OK
new_f = true if @is_sysadm    #管理者は新規OK
%>
<div class="editingBox">
<%if new_f%>
  <span class="btEdit"><%=link_to('編集', "#{@item.edit_path}")%></span>
  <span class="btDestroy"><%=link_to '削除', "#{@item.delete_path}", :confirm => '削除をすると元に戻せません。削除しますか', :method => :delete %></span>
<%end%>
</div>
<table class="show">
 <tr><th style="width: 120px;">画像種別</th>
 <td><div class="show"><%=@item.share_states[@item.share.to_s]%></div></td></tr>
 <tr><th style="width: 120px;">利用範囲</th>
 <td><div class="show"><%=@item.name_rou%></div></td></tr>
 <tr><th style="width: 120px;">画像説明</th>
 <td><div class="show"><%=@item.memo%></div></td></tr>
</table>
<table class="show">
 <tr> <th style="width: 120px;">画像</th> </tr>
<tr>
 <td><div class="show"><%= image_tag(@item.file_path, :alt=>@item.memo) %></div></td>
 </tr>
</table>
